<center>

  <h1><%= @cat.name %></h1>
  <hr>

  <table border=1>
    <tr>
      <th width="20%">Age</th>
      <th width="20%">Color</th>
      <th width="20%">Birthdate</th>
      <th width="20%">Sex</th>
    </tr>

    <tr>
      <td><%= @cat.age %></td>
      <td><%= @cat.color %></td>
      <td><%= @cat.birth_date %></td>
      <td><%= @cat.sex %></td>
    </tr>

  </table>

  <h1>Rental Requests</h1>
  <table border=1>
    <tr>
      <th width="20%">Start Date</th>
      <th width="20%">End Date</th>
      <th width="20%">Status</th>
    </tr>

    <% @cat.cat_rental_requests.each do |request| %>
      <tr>
        <td><%= request.start_date %></td>
        <td><%= request.end_date %></td>
        <td><%= request.status %></td>
      </tr>
    <% end %>

  </table>
</center>
<hr>
<%= link_to "Edit ", edit_cat_url(@cat) %> | <%= link_to "Back", cats_url %>
